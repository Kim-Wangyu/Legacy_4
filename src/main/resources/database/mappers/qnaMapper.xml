<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.s1.qna.QnaDAO">

	<insert id="add" parameterType="QnaDTO">
		INSERT INTO QNA 
		VALUES(QNA_SEQ.NEXTVAL,#{title},#{contents},#{writer},'2022-03-05',0,0,0,0)
	</insert>
	
		<select id="list" resultType="QnaDTO">
		SELECT * FROM QNA
	</select>
	
		<update id="update" parameterType="QnaDTO">
		UPDATE QNA SET
		title=#{title}, 
		contents=#{contents},
		writer=#{writer}
		WHERE
		num=#{num}
	</update>

	<select id="detail" parameterType="QnaDTO"
		resultType="QnaDTO">
		SELECT * FROM QNA WHERE num=#{num}
	</select>




	<delete id="delete" parameterType="QnaDTO">
		DELETE QNA WHERE
		NUM=#{num}
	</delete>

 </mapper>