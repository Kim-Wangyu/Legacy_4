<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.iu.s1.member.MemberDAO">

	<select id="mypage" parameterType="MemberDTO"
		resultType="MemberDTO">
		SELECT ID,NAME,PHONE,EMAIL FROM MEMBER WHERE ID =#{id}

	</select>

	<update id="update" parameterType="MemberDTO">
		UPDATE MEMBER SET
		pw=#{pw},name=#{name}, phone=#{phone},
		email=#{email}
		WHERE
		id=#{id}
	</update>



	<select id="login" parameterType="MemberDTO"
		resultType="MemberDTO">
		SELECT ID,NAME FROM MEMBER WHERE ID=#{id} AND PW=#{pw}
	</select>

	<insert id="join" parameterType="MemberDTO">
		INSERT INTO MEMBER (ID,PW,NAME,PHONE,EMAIL)
		VALUES
		(#{id},#{pw},#{name},#{phone},#{email})

	</insert>


</mapper>